        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SampleWelcomeActivity"
            android:theme="@style/SampleWelcomeScreenTheme"/>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SignUp2Activity" />
        <activity android:name=".TransferActivity" />
        <activity android:name=".UserProfileActivity" />
        <activity android:name=".TransactionSummaryActivity" />
    </application>
</manifest>